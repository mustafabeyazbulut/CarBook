@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Araba Listesi</h4>
        <p class="card-subtitle mb-4">
            Arabalarla ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz
        </p>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Vites Türü</th>
                        <th>Km</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                        <th>Sitede Gör</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.brandName</td>
                            <td>@item.model</td>
                            <td>@item.transmission</td>
                            <td>@item.km</td>
                            <td><a href="/AdminCar/RemoveCar/@item.carId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AdminCar/UpdateCar/@item.carId" class="btn btn-outline-success">Güncelle</a></td>
                            <td><a href="/CarList/CarDetail/@item.carId" class="btn btn-outline-dark">Detaylar</a></td>
                            <td><a href="/CarList/CarDetail/@item.carId" class="btn btn-outline-warning">Sitede Gör</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a>
        </div>

    </div>
    <!-- end card-body-->
</div>
