@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Araç Güncelleme Sayfası</h4>
        <p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>

        <form method="post">
            <input type="hidden" asp-for="CarId"/>
            <div class="form-group">
                <label for="exampleInputBrand">Marka</label>
                @Html.DropDownListFor(x=>x.BrandId,(List<SelectListItem>)ViewBag.BrandValues,new {@class="form-control"})
            </div>
            <div class="form-group">
                <label for="exampleInputModel">Model</label>
                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model girişi yapınız">
            </div>
            <div class="form-group">
                <label for="exampleInputCoverImageUrl">Kapak Fotoğrafı</label>
                <input type="text" class="form-control" id="exampleInputCoverImageUrl" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf linkini giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputKm">Km</label>
                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km bilgisi giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputTransmission">Vites Türü</label>
                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türü giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputSeat">Koltuk Sayısı</label>
                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısı giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputLuggage">Bagaj Sayısı</label>
                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısı giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputFuel">Yakıt Türü</label>
                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türü giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
                <input type="text" class="form-control" id="exampleInputBigImageUrl" asp-for="BigImageUrl" placeholder="Araç Detayında Gözükecek Kapak Fotoğraf Linkini Giriniz">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>