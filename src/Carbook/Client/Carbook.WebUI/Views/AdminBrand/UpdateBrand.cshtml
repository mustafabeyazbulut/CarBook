@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Marka Güncelleme Sayfası</h4>
        <p class="card-subtitle mb-4">

        </p>

        <form method="post">
            <input type="hidden" asp-for="BrandId" />

            <div class="form-group">
                <label for="exampleInputModel">Marka</label>
                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Marka girişi yapınız">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>



