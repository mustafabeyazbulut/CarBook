@model List<ResultAllBlogWithAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Blog Listesi ve İşlemleri</h4>
        <p class="card-subtitle mb-4">
            Bloglarla ilgili silme güncelleme ve blog listesi erişimini görebilirsiniz. 
        </p>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Yazar</th>
                        <th>Kategori</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Bloğu Aç</th>
                        <th>Bloğu Ait Yorumlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.AuthorName</td>
                            <td>@item.CategoryName</td>
                            <td>@item.CreatedDate</td>
                            <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogId" class="btn btn-outline-danger">Kaldır</a></td>
                            <td><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-success">Bloğu aç</a></td>
                            <td><a href="/Admin/AdminComment/Index/@item.BlogId" class="btn btn-outline-success">Yorumlar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/AdminBlog/CreateBlog/" class="btn btn-outline-primary">Yeni Blog Girişi</a>
        </div>

    </div>
    <!-- end card-body-->
</div>

