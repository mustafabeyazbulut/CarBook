@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Banner Düzenleme Ekranı</h4>
        <p class="card-subtitle mb-4">

        </p>

        <form method="post">
            <input type="hidden" asp-for="BannerId" />
            <div class="form-group">
                <label for="exampleInputTitle">Özellik</label>
                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputDescription">Özellik</label>
                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputVideoDescription">Özellik</label>
                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklamasını giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputVideoUrl">Özellik</label>
                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video Url giriniz">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>

