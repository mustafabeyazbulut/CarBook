@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Ödeme Türü Düzenleme Ekranı</h4>
        <p class="card-subtitle mb-4">

        </p>

        <form method="post">
            <input type="hidden" asp-for="PricingId" />
            <div class="form-group">
                <label for="exampleInputTitle">Ödeme Türü</label>
                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Ödeme Türü giriniz">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Pricing Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>

